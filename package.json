{
  "name": "paycio-wallet",
  "version": "2.0.0",
  "description": "Secure multi-chain cryptocurrency wallet supporting Bitcoin, Ethereum, Solana, TRON, and more",
  "main": "dist/popup.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:chrome": "webpack --mode production --env browser=chrome",
    "build:firefox": "webpack --mode production --env browser=firefox",
    "build:edge": "webpack --mode production --env browser=edge",
    "build:all": "npm run build:chrome && npm run build:firefox && npm run build:edge",
    "dev": "webpack --mode development --watch",
    "dev:chrome": "webpack --mode development --watch --env browser=chrome",
    "dev:firefox": "webpack --mode development --watch --env browser=firefox",
    "dev:edge": "webpack --mode development --watch --env browser=edge",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check-all": "npm run lint && npm run type-check && npm test",
    "clean": "rm -rf dist",
    "package": "npm run clean && npm run build:all && npm run zip",
    "zip": "cd dist && zip -r paycio-wallet-chrome.zip chrome/ && zip -r paycio-wallet-firefox.zip firefox/ && zip -r paycio-wallet-edge.zip edge/",
    "analyze": "webpack --mode production --analyze",
    "optimize-images": "imagemin src/assets/* --out-dir=dist/assets",
    "minify": "terser dist/*.js -o dist/*.min.js",
    "security-audit": "npm audit && snyk test",
    "performance-test": "lighthouse dist/popup.html --output=json --output-path=./lighthouse-report.json",
    "deploy:chrome": "npm run build:chrome && npm run zip:chrome",
    "deploy:firefox": "npm run build:firefox && npm run zip:firefox",
    "deploy:edge": "npm run build:edge && npm run zip:edge",
    "zip:chrome": "cd dist && zip -r paycio-wallet-chrome.zip chrome/",
    "zip:firefox": "cd dist && zip -r paycio-wallet-firefox.zip firefox/",
    "zip:edge": "cd dist && zip -r paycio-wallet-edge.zip edge/",
    "prepublishOnly": "npm run check-all && npm run security-audit",
    "postinstall": "husky install"
  },
  "keywords": [
    "wallet",
    "cryptocurrency",
    "blockchain",
    "ethereum",
    "bitcoin",
    "solana",
    "tron",
    "browser-extension",
    "metamask",
    "multichain",
    "defi",
    "nft",
    "react",
    "typescript",
    "tailwindcss",
    "paycio"
  ],
  "author": "PayCio Wallet Team",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "@heroicons/react": "^2.0.18",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.34",
    "@solana/wallet-adapter-wallets": "^0.19.23",
    "@solana/web3.js": "^1.87.6",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@walletconnect/web3-provider": "^1.8.0",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "clsx": "^2.0.0",
    "crypto-js": "^4.2.0",
    "ethers": "^6.8.1",
    "framer-motion": "^10.16.4",
    "hdkey": "^2.1.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.263.1",
    "moment": "^2.29.4",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.10.1",
    "react-router-dom": "^6.8.1",
    "ripple-lib": "^1.10.1",
    "tailwind-merge": "^1.14.0",
    "ton": "^13.9.0",
    "ton-core": "^0.53.0",
    "ton-crypto": "^3.2.0",
    "uuid": "^9.0.1",
    "webextension-polyfill": "^0.10.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.1",
    "bcryptjs": "^2.4.3",
    "scrypt-js": "^3.0.1",
    "axios": "^1.6.0",
    "web3": "^4.2.0",
    "dotenv": "^16.3.1",
    "xrpl": "^2.14.0",
    "@ledgerhq/hw-transport-webusb": "^6.28.0",
    "@ledgerhq/hw-app-eth": "^6.30.0",
    "@trezor/connect": "^9.0.0",
    "@sentry/browser": "^7.0.0",
    "lighthouse": "^11.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "terser-webpack-plugin": "^5.3.0",
    "imagemin-webpack-plugin": "^2.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.0",
    "@types/chrome": "^0.1.4",
    "@types/crypto-js": "^4.1.2",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.5.0",
    "@types/qrcode": "^1.5.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.4",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.5",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-bundle-analyzer": "^4.9.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "snyk": "^1.0.0",
    "imagemin": "^8.0.0",
    "imagemin-pngquant": "^9.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "terser": "^5.0.0",
    "cross-env": "^7.0.3"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check-all"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"],
    "moduleNameMapping": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/setupTests.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/paycio-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/paycio-wallet/issues"
  },
  "homepage": "https://paycio-wallet.com",
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/payciowallet"
  }
}
