{
  "manifest_version": 3,
  "name": "PayCio Wallet Test",
  "version": "1.0.0",
  "description": "Test extension for content script injection",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_title": "PayCio Wallet Test"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "test-content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "test-content-script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
